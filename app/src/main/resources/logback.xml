<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Консольный аппендер (вывод в консоль) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Формат лога: дата, поток, уровень, логгер, сообщение, requestId из MDC -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg [requestId=%X{requestId}]%n</pattern>
        </encoder>
    </appender>

    <!-- Файл логов для общего логгера -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Ежедневная ротация логов -->
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Храним последние 30 дней -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg [requestId=%X{requestId}]%n</pattern>
        </encoder>
    </appender>

    <!-- Отдельный файл для аудита -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/audit.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg [requestId=%X{requestId}]%n</pattern>
        </encoder>
    </appender>

    <!-- Отдельный файл для безопасности -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/security.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg [requestId=%X{requestId}]%n</pattern>
        </encoder>
    </appender>

    <!-- Основной корневой логгер -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Логгер для аудита (отказы доступа, входы) -->
    <logger name="audit" level="WARN" additivity="false">
        <appender-ref ref="AUDIT_FILE" />
    </logger>

    <!-- Логгер для безопасности -->
    <logger name="security" level="INFO" additivity="false">
        <appender-ref ref="SECURITY_FILE" />
    </logger>

</configuration>
